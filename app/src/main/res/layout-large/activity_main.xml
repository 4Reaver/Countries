<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        class="com.example.reaver.countries.FragmentCountriesList"
        android:id="@+id/fragment_countries_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_counries_list"
        android:layout_weight="1">
    </fragment>
    <fragment
        android:id="@+id/fragment_detail_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.example.reaver.countries.FragmentDetailInfo"
        tools:layout="@layout/fragment_detail_info"
        android:layout_weight="1">
        </fragment>
</LinearLayout>
