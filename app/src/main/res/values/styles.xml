<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/list_background</item>
    </style>
    <style name="item_country_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:padding">@dimen/item_padding</item>
        <item name="android:textColor">@color/item_text_color</item>
        <item name="android:textSize">@dimen/item_text_size</item>
    </style>
    <style name="item_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/item_padding</item>
        <item name="android:textColor">@color/item_details</item>
        <item name="android:textSize">@dimen/item_details_text_size</item>
    </style>
    <style name="detail" parent="item_country_name">
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/detail_text_size</item>
    </style>
    <style name="item_person" parent="item_country_name">
        <item name="android:textSize">@dimen/person_list_item_text_size</item>
    </style>

</resources>
